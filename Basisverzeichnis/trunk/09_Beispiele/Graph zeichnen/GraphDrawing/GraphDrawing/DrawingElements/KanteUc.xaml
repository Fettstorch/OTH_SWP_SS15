<UserControl x:Class="GraphDrawing.DrawingElements.KanteUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:drawingElements="clr-namespace:GraphDrawing.DrawingElements"
             mc:Ignorable="d" PreviewMouseLeftButtonDown="KanteUc_OnPreviewMouseLeftButtonDown">
    <Grid>
        <Canvas Name="DrawingCanvas">
            <drawingElements:CappedLine x:Name="ArrowCappedLine" Stroke="Black"
                                        StrokeThickness="1" EndCap="M0,0 L6,-6 L6,6 z" >
                <drawingElements:CappedLine.LinePath>
                    <PathGeometry/>
                </drawingElements:CappedLine.LinePath>
            </drawingElements:CappedLine>
        </Canvas>
    </Grid>
</UserControl>
