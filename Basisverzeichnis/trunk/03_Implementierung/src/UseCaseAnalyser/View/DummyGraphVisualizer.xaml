<UserControl x:Class="UseCaseAnalyser.View.DummyGraphVisualizer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:UseCaseAnalyser.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <UserControl.Resources>
        <converters:GraphElementToStringConverter x:Key="GraphToScenarioStringConverter" />
    </UserControl.Resources>
    <StackPanel Margin="10">
        <TextBlock FontWeight="Bold">This is a dummy 'graph visualizer' to test the bindings. Acutal graph visualizer will go here.</TextBlock>
        <Line />
        <TextBlock Text="{Binding Path=UseCase, Mode=OneWay}" />
        <TextBlock Text="{Binding Path=Scenario, Converter={StaticResource GraphToScenarioStringConverter}, Mode=OneWay}" />
        <Button Content="Select first node" Click="ButtonBase_OnClick"/>
    </StackPanel>
</UserControl>
